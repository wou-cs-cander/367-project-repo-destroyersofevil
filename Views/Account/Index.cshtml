@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@{
    ViewData["Title"] = "My Account";
}

@* Only allow authorized users *@
@attribute [Authorize]

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <p>Welcome, <strong>@(User?.Identity?.Name ?? "User")</strong>!</p>

                    <h5>Your Details</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@(User?.FindFirstValue(ClaimTypes.Name) ?? "Not Available")</dd>
                        @* Add more user-specific info here *@
                    </dl>

                    <h5>Your Options</h5>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a asp-controller="Workout" asp-action="Index">Browse Exercises</a>
                        </li>
                        <br>
                        <li class="list-group-item">
                            <a asp-controller="WorkoutPlan" asp-action="Create">Generate Workout Plan</a>
                        </li>
                        <br>
                        <li class="list-group-item">
                            <a asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
